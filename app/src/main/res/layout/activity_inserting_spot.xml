<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inserting_spot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.parking.inserting_spot">

    <TextView
        android:text="地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:id="@+id/address" />
    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/input_box"
        android:id="@+id/edit_address" />

    <TextView
        android:text="描述"
        android:textSize="25sp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/description" />
    <EditText
        android:inputType="text"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="160dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/input_box"
        android:id="@+id/edit_description" />

    <TextView
        android:text="类型"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/category" />
    <EditText
        android:layout_marginTop="190dp"
        android:layout_marginLeft="160dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:hint="请输入室内或室外"
        android:background="@drawable/input_box"
        android:id="@+id/edit_category" />

    <TextView
        android:text="尺寸"
        android:textSize="25sp"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="260dp"
        android:id="@+id/size" />
    <EditText
        android:layout_marginTop="260dp"
        android:layout_marginLeft="160dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/input_box"
        android:id="@+id/edit_size" />

    <TextView
        android:text="联系方式"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="330dp"
        android:id="@+id/spot_local_ref" />
    <EditText
        android:layout_marginTop="330dp"
        android:layout_marginLeft="160dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/input_box"
        android:id="@+id/edit_spot_local_ref" />

    <Button
        android:text="确认"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:id="@+id/confirm" />

    <Button
        android:text="取消"
        android:layout_marginTop="380dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/edit_spot_local_ref"
        android:layout_alignStart="@+id/edit_spot_local_ref"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

</RelativeLayout>
