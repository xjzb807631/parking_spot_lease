<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inserting_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.acer.parking.inserting_offer">

    <TextView
        android:text="开始时间"
        android:textSize="25sp"
        android:inputType="time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:id="@+id/start_time" />
    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:layout_marginLeft="150dp"
        android:layout_height="40dp"
        android:id="@+id/edit_start_time"
        android:background="@drawable/input_box"/>

    <TextView
        android:text="结束时间"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/stop_time" />
    <EditText
        android:layout_marginTop="120dp"
        android:layout_width="180dp"
        android:layout_marginLeft="150dp"
        android:layout_height="40dp"
        android:id="@+id/edit_stop_time"
        android:background="@drawable/input_box"/>

    <TextView
        android:text="报价"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/offer_price" />
    <EditText
        android:layout_marginTop="190dp"
        android:layout_width="180dp"
        android:layout_marginLeft="150dp"
        android:layout_height="40dp"
        android:id="@+id/edit_offer_price"
        android:background="@drawable/input_box"/>

    <Button
        android:text="确认"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:id="@+id/confirm" />

    <Button
        android:text="取消"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:layout_alignBaseline="@+id/confirm"
        android:layout_alignBottom="@+id/confirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <TextView
        android:text="车位id"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/spot_id" />
    <EditText
        android:layout_marginTop="260dp"
        android:layout_width="180dp"
        android:layout_marginLeft="150dp"
        android:layout_height="40dp"
        android:id="@+id/edit_spot_id"
        android:background="@drawable/input_box"/>
</RelativeLayout>
